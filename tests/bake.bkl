<?xml version="1.0"?>

<makefile>
	<requires version="0.2.6"/>
	<set var="BUILDDIR">..$(DIRSEP)bake</set>
	<include file="../euphoria.bkl" />

	<eutest id="eui" />
	
	<eutest id="full">
		<set var="__translator">$(BUILDDIR)$(DIRSEP)euc$(EXEEXT)</set>
		<depends-on-file>$(__translator)</depends-on-file>
		<translator>$(__translator)</translator>
		<dependency-of>all</dependency-of>
	</eutest>

	<eutest id="regex">
		<tests>t_regex.e</tests>
	</eutest>
</makefile>
