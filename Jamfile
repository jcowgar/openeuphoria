#
# Jam build system for Euphoria
#

SubDir TOP ;

#
# Include our configuration file
#
# This can be overriden with jam -sCONFIG=debug.jam
#

if ! $(CONFIG)
{
    CONFIG = config.jam ;
}

# TODO: nothing yet creates the config.jam file
# include $(CONFIG) ;

#
# Set our build directory, if not otherwise set
#
# This can be overriden in the $(CONFIG) file or
# with jam -sBUILD_DIR=abcxyz
#

if ! $(BUILD_DIR)
{
    BUILD_DIR = [ FDirName $(TOP) build ] ;
}

#
# Setup our build commands
#

BUILD_EUI_CMD = $(EUI_EXE) -i [ FDirName $(ROOT_DIR) include ]
    [ FDirName $(ROOT_DIR) source eu.ex ] ;
BUILD_EUC_CMD = $(EUI_EXE) -i [ FDirName $(ROOT_DIR) include ]
    [ FDirName $(ROOT_DIR) source ec.ex ] ;

#
# Include our sub directory projects
#

SubInclude TOP source ;
SubInclude TOP docs ;
SubInclude TOP tests ;
